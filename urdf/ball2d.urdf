<?xml version="1.0"?>
<robot name="Ball">

  <link name="floor">
    <visual>
      <origin xyz="0 0 -0.05"/>
      <geometry>
        <box size="2.5 2.5 0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="ball">
  <visual>
    <origin xyz="0 0 0"/>
    <geometry>
      <sphere radius=".05"/>
    </geometry>
    <material name="green">
      <color rgba="0 0.8 .8 .75"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0. 0. 0."/>
    <geometry>
      <sphere radius="0"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="1."/>
    <inertia ixx="1e-6" ixy="0." ixz="0." iyy="1e-6" iyz="0." izz="1e-6"/>
  </inertial>
  </link>
  
  <joint name="floor_to_ball" type="planar">
    <axis xyz="0 -1 0"/>
    <parent link="floor"/>
    <child link="ball"/>
  </joint>

</robot>
