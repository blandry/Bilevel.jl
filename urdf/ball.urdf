<?xml version="1.0"?>
<robot name="Ball">

  <link name="floor">
    <visual>
      <origin xyz="0 0 -0.05"/>
      <geometry>
        <box size="2.5 2.5 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 -0.05"/>
      <geometry>
        <box size="2.5 2.5 0.1"/>
      </geometry>
    </collision>
    <collision>
      <geometry>
        <plane normal="0 0 1"/>
      </geometry>
    </collision>
  </link>
  
  <link name="ball">
  <visual>
    <origin xyz="0 0 0"/>
    <geometry>
      <sphere radius=".05"/>
    </geometry>
    <material name="green">
      <color rgba="0 0.8 .8 .75"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0. 0. 0."/>
    <geometry>
      <sphere radius="0"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="1."/>
    <inertia ixx="1." ixy="0." ixz="0." iyy="1." iyz="0." izz="1."/>
  </inertial>
  </link>
  
  <joint name="floor_to_ball" type="fixed">
    <parent link="floor"/>
    <child link="ball"/>
    <origin xyz="0 0 0"/>
  </joint>
  
</robot>
